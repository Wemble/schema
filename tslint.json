{
  "exclude": [
    "node_modules"
  ],
  "rules": {
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "curly": true,
    "import-spacing": true,
    "adjacent-overload-signatures": true,
    "no-conditional-assignment": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore"
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "typedef": [
      true,
      "variable-declaration",
      "property-declaration",
      "arrow-call-signature",
      "parameter",
      "call-signature",
      "arrow-parameter",
      "member-variable-declaration"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "max-line-length": [
      true,
      100
    ],
    "member-ordering": [
      true,
      "public-before-private",
      "static-before-instance",
      "variables-before-functions"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ]
  },
  "jsRules": {}
}